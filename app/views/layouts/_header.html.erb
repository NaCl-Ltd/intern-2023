<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">

      <%= image_tag("header-ruby-logo.png", id: "logo_icon", alt: "Ruby logo", width: "30px") %>
      <%= link_to t("Nyan"), root_path, id: "logo" %>
    </ul>
    <nav>
      <div class="navbar-header">
        <button id="hamburger" type="button" class="navbar-toggle collapsed">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <ul id="navbar-menu"
          class="nav navbar-nav navbar-right">
        <li><%= link_to t("Home"), root_path %></li>
        <% if logged_in? %>
          <li><%= link_to "#{t("New")} (#{@new_microposts_count})", new_path %></li>
        <% end %>
        <li><%= link_to t("Likes-ranking") ,ranking_path%>
        <li><%= link_to t("Help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t(User), users_path %></li>
          <li class="dropdown">
            <a href="#" id="account" class="dropdown-toggle">
              <%= t("Account") %><b class="caret"></b>
            </a>
            <ul id="dropdown-menu" class="dropdown-menu">
              <li><%= link_to t("Profile"), current_user %></li>
              <li><%= link_to t("Setting"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("Logout"), logout_path,
                                       data: { "turbo-method": :delete } %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("Login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
