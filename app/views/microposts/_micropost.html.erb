<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= linkify_urls(micropost.content) %>
    <% if micropost.image.attached? %>
      <%= image_tag micropost.image.variant(:display) %>
    <% end %>
  </span>
  <span class="timestamp">
    <%= t("Post2") %><%= time_ago_in_words(micropost.created_at) %><%= t("ago") %>
    <% if current_user?(micropost.user) %>
      <% if micropost.deleted_flag == false%>
        <%= link_to t("DeletePost"), micropost, data: { "turbo-method": :delete,
                                               turbo_confirm: "You sure?" } %>
      <% else %>
        <%= link_to t("micropost_revive"), micropost, data: { "turbo-method": :delete,
        turbo_confirm: "You sure?" } %>
      <% end %>
    <% end %>
  </span>
</li>
