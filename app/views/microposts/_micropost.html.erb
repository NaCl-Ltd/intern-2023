<li id="micropost-<%= micropost.id %>">
  <div class="contents">
    <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
    <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
    <%= link_to "@#{micropost.user.nickname}", micropost.user, class: "user" %>
    <span class="content">
    <%= linkify_urls(micropost.content) %>
    <% if micropost.images.attached? %>
      <% micropost.images.each do |image| %>
        <%= image_tag image.variant(:display) %>
      <% end %>
    <% end %>
  </span>
    <span class="timestamp">
    <%= t("Post2") %><%= time_ago_in_words(micropost.created_at) %><%= t("ago") %>
    <% if current_user?(micropost.user) %>
      <% if micropost.deleted_flag %>
        <%= link_to t("micropost_revive"),revive_micropost_path(micropost) , data: { "turbo-method": :POST,
      turbo_confirm: "You sure?" } %>
      <% else %>
        <%= link_to t("DeletePost"), micropost, data: { "turbo-method": :delete,
                                               turbo_confirm: "You sure?" } %>
      <% end %>
    <% end %>
    <%= link_to micropost.users_like_count, show_user_micropost_path(micropost) %>
    <%= link_to micropost.users_bad_count, bad_user_micropost_path(micropost) %>
    <%= link_to "💬(#{micropost.messages_count})", micropost_messages_path(micropost) %>
    <button class="reply-button">返信</button>
    
    <!-- 編集フォーム -->
    <div class=""form-wrapper style="display: none;">
      <%= form_with(model: [micropost, @message], method: :POST, local: true) do |f| %>
        <%= f.label :content %>
        <%= f.text_field :content, class: 'form-control' %>
        <%= f.submit "りにゃー", class: "btn btn-primary" %>
      <% end %>
    </div>
  </span>
  </div>
  <div>
  <span class="like-icon">
    <% if micropost.is_like(current_user.id) %>
      <%= link_to image_tag('unlike.jpg', size: "50x50"), likes_create_path(id: micropost.id) %>
    <% else %>
      <%= link_to image_tag('like.jpg', size: "50x50"), likes_delete_path(id: micropost.id) %>
    <% end %>
  </span>
  <span class="bad-icon">
    <% if micropost.is_bad(current_user.id) %>
      <%= link_to image_tag('not_bad_fish.jpg', size: "50x50"), bads_create_path(id: micropost.id) %>
    <% else %>
      <%= link_to image_tag('bad_fish.jpg', size: "50x50"), bads_destroy_path(id: micropost.id) %>
    <% end %>
  </span>
  </div>
</li>



