<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>      
      </h1>
    </section>          
    <% if @user.introduction.present? %>
        <h3>出身地:<%= @user.birthplace %></h3>
    <% end %>
    <% if @user.introduction.present? %>
      <p><%= @user.introduction %></p>
    <% end %>
    <%= link_to "にゃー一覧", user_path(id: params[:id]) %>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
      <% @likes = @user.like_microposts%>
    <% if @user.microposts.any? %>
      <h3>Likes(<%= @likes.count %>)</h3>
      <ol class="microposts">
        <%= render 'likes' %>
      </ol>
    <% end %>
  </div>
</div>
