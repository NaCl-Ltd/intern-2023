<% provide(:title, 'Users') %>
<main class="search">
<h1><%= t("AllUsers") %></h1>

<%= form_with url: search_path, method: :post do |form| %>
<div class="select">
<label>
  <%= t("Usersearch") %>
  <%= form.radio_button :select,"ユーザー検索" ,:checked => true %>
</label>
<label>
  <%= t("Keywordsearch")%>
  <%= form.radio_button :select,"キーワード検索" %>
</label>
</div>
<%= form.text_field :data, class: "textfield", placeholder: "🔍"+t("Search") %>
<% end %>
<%= will_paginate %>
<ul class="users">
  <% if @users.present?%>
    <%= render @users%>
  <%else%>
    <p style ="font-size:40px"><%=t("Not_exist")%></p>
  <% end%>
</ul>
<%= will_paginate %>
</main>