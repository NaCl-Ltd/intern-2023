<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <% if @user.birthplace.present? %>
        <h3>出身地:<%= @user.birthplace %></h3>
      <% end %><br>
      <% if @user.introduction.present? %>
        <p><%= @user.introduction %></p>
      <% end %>
      <%= link_to "Like", show_likes_path(id: params[:id]),class: 'btn btn-default' %>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
